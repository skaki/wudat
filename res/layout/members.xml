<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    
    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
     <ImageView
        android:id="@+id/imageView1"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"
        android:src="@drawable/phil_p" />

     <ImageButton
        android:id="@+id/imageBtnHandshake"
        android:layout_marginTop="5dp"
        android:layout_marginLeft ="-28dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/handshake" />
     
     <ImageButton
        android:id="@+id/imageBtnBusinesscard"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="28dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/businesscard" />

      <ImageButton
        android:id="@+id/imageBtnPowerPartner"
        android:layout_marginTop="-257dp"
        android:layout_marginLeft="80dp"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/powerpartner" />
     
 </LinearLayout>